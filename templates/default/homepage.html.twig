{% extends 'base.html.twig' %}

{% block title  %} {{ parent() }} - Home {% endblock %}

{% block body %}


    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h1  class="text-uppercase font-weight-bold">Project X</h1>
                    <hr class="divider my-4 bg-dark">
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <p class='text-white-75 font-weight-light mb-5'>Our first Symfony project</p>
                    {#  <a class="btn btn-primary btn-xl js-scroll-trigger" href="">Find Out More</a> #}
                </div>
            </div>
        </div>
    </header>

    <section>
        <div class="container">





            {% set username = 'someone' %}
            {% set itemList = [1,2,58,8,7,654,24] %}


            <ul>
                {% for item in itemList %}
                    {% if item is odd %}
                        <li>{{ item }}</li>
                    {% endif %}
                {% endfor %}
            </ul>

            {% for i in range(0,10) %}
                {% if loop.last %}
                {% endif %}
                {{ i }}
            {% endfor %}
        </div>
    </section>



{% endblock %}


