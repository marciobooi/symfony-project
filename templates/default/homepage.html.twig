{% extends 'base.html.twig' %}

{% block title  %} {{ parent() }} - Home {% endblock %}

{% block body %}

    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h1  class="text-uppercase font-weight-bold">Project <a class="newcolor" style="-webkit-text-stroke: 0px black;">X</a></h1>
                    <hr class="divider my-4 bg-dark">
                </div>
                <div class="align-self-baseline typewriter">
                    <a class='font-weight-light'>Our first Symfony project</a>
                    <a class="goDown newcolor" href="#gallary"><i class="far fa-arrow-alt-circle-down"></i></a>
                </div>


            </div>
        </div>
    </header>

    <section id="gallary">
        <div class="'count my-4">
            Total pictures count : {{ pictures.getTotalItemCount }}
        </div>
        <div class="row">

  {% for picture in pictures %}


            <div class="col">
                <div class="photo-container" style="background-image:url({{ path('get_picture_content', {'picture': picture.getId()}) }});"></div>
                <h2>{{ picture.getTitle() }} </h2>
                {% for tag in picture.getTags() %}
                        <span>{{ tag.getLabel() }}</span>
                    {% endfor %}
                <div class="slide">
                    <p class="newp">{{ picture.getSharer().getUsername() }} </p>
                </div>



            </div>
{% endfor %}

        </div>
        <div class="navigation">
            {{ knp_pagination_render(pictures) }}
        </div>
    </section>

    <section>
        <div class="container-fluid" style="background-color: #00aced; height: 500px;">

        </div>
  </section>


{% endblock %}



{% block stylesheets %}{{ parent() }}
    <link rel="stylesheet" href="../CSS/main.css">
{% endblock %}